@{
    ViewData["Title"] = "Home Page";
}
@model FoodListViewModel
<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner.jpg" class="d-block w-100 h-50" alt="Banner of Indian Cusine">
            <div class="background-overlay"></div>
            <div class="carousel-caption">
                <h5 class="display-4 h4-md mb-4 font-weight-bold">Authentic Indian Taste</h5>
                <p class="h4 mb-5 pb-3 text-white-50">Lets join with us to have an awsome experience</p>
                
            </div>
        </div>
    </div>
</div>

<div class="p-5 text-center font-weight-bold h3"> For More varities visit our shop
    <a href="Food/List" class="btn btn-lg btn-danger">View All</a>
</div>
<div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                    <a href="">
                        <div class="card-flyer">
                            <div class="text-box">
                                <div class="image-box">
                                    <img src="@category.ImagePath" alt="@category.Name" />
                                </div>
                                <div class="text-container">
                                    <h6>@category.Name</h6>
                                    <p>@category.Description</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>







